//<Change Percent Testfor Clock 1
FUNC Func_ChangePercentTFClock1
	testfor @e[type=ArmorStand,ADStand1,ADps=1]
	SetblockTestfor
	
	LOOP 0 100 + 1 () 0.0 1 + 0.01
		IF |0|<100
			@e[type=ArmorStand,ADStand1,ADps=1,ADpe=|0|] setblock $SBlock1$ structure_block 0 replace {integrity:|2|f,;
			mode:"LOAD",posX:3,posY:-3,posZ:2,name:"AnvilDrop",showboundingbox:0b}
		END
		IF |0|=100
			@e[type=ArmorStand,ADStand1,ADps=1,ADpe=|0|] setblock $SBlock1$ structure_block 0 replace {integrity:1.0f,;
			mode:"LOAD",posX:3,posY:-3,posZ:2,name:"AnvilDrop",showboundingbox:0b}
		END
	END
	
	@e[type=ArmorStand,ADStand1,ADps=1] ADps = 0
END
